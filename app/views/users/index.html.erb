<div class="mb-4">
  <h1>Usuários</h1>
  <p style="color: var(--gray-600);">Gerencie os usuários do sistema</p>
</div>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Todos os Usuários (<%= @users.count %>)</h3>
    <%= link_to "➕ Novo Usuário", new_user_path, class: "btn btn-primary" %>
  </div>
  
  <div class="card-body p-0">
    <% if @users.any? %>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>E-mail</th>
              <th>Coordenador</th>
              <th class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><strong><%= user.name %></strong></td>
                <td><%= user.email %></td>
                <td>
                  <% if user.is_coordinator %>
                    <span class="badge badge-primary">Sim</span>
                  <% else %>
                    <span class="badge badge-secondary">Não</span>
                  <% end %>
                </td>
                <td class="text-center">
                  <div class="btn-group">
                    <%= link_to "Ver", user_path(user), class: "btn btn-sm btn-secondary" %>
                    <%= link_to "Editar", edit_user_path(user), class: "btn btn-sm btn-warning" %>
                    <%= button_to "Excluir", user_path(user), method: :delete, 
                        data: { confirm: "Tem certeza que deseja excluir este usuário?" }, 
                        class: "btn btn-sm btn-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p style="color: var(--gray-600); text-align: center; padding: var(--spacing-xl);">
        Nenhum usuário cadastrado ainda.
      </p>
    <% end %>
  </div>
</div>
