<div class="mb-4">
  <h1>Leitores</h1>
  <p style="color: var(--gray-600);">Gerencie os leitores para as celebrações litúrgicas</p>
</div>

<!-- Estatística de Leitores -->
<div class="grid grid-1 mb-4">
  <div class="stat-card stat-info">
    <div class="stat-card-value"><%= @readers.count %></div>
    <div class="stat-card-label">Leitores Disponíveis</div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Todos os Leitores (<%= @readers.count %>)</h3>
    <%= link_to "➕ Novo Leitor", new_reader_path, class: "btn btn-primary" %>
  </div>
  
  <div class="card-body p-0">
    <% if @readers.any? %>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Usuário</th>
              <th>Disponibilidade</th>
              <th>Tipos de Leitura</th>
              <th class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @readers.each do |reader| %>
              <tr>
                <td><strong><%= reader.user&.name || 'N/A' %></strong></td>
                <td>
                  <% if reader.disponibility.present? %>
                    <%= reader.disponibility.join(", ") %>
                  <% else %>
                    <span class="badge badge-secondary">Não especificada</span>
                  <% end %>
                </td>
                <td>
                  <% if reader.read_types.present? %>
                    <%= reader.read_types.join(", ") %>
                  <% else %>
                    <span class="badge badge-secondary">Não especificado</span>
                  <% end %>
                </td>
                <td class="text-center">
                  <div class="btn-group">
                    <%= link_to "Ver", reader_path(reader), class: "btn btn-sm btn-secondary" %>
                    <%= link_to "Editar", edit_reader_path(reader), class: "btn btn-sm btn-warning" %>
                    <%= button_to "Excluir", reader_path(reader), method: :delete, 
                        data: { confirm: "Tem certeza que deseja excluir este leitor?" }, 
                        class: "btn btn-sm btn-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p style="color: var(--gray-600); text-align: center; padding: var(--spacing-xl);">
        Nenhum leitor cadastrado ainda.
      </p>
    <% end %>
  </div>
</div>
