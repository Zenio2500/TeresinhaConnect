<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <h1 class="login-title">✞ Teresinha Connect</h1>
      <p class="login-subtitle">Sistema de Gestão Paroquial</p>
    </div>

    <%= form_with url: login_path, method: :post, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email, "E-mail", class: "form-label required" %>
        <%= f.email_field :email, class: "form-control", placeholder: "seu@email.com", required: true, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Senha", class: "form-label required" %>
        <%= f.password_field :password, class: "form-control", placeholder: "••••••••", required: true %>
      </div>

      <div class="form-group">
        <%= f.submit "Entrar", class: "btn btn-primary btn-lg", style: "width: 100%;" %>
      </div>
    <% end %>

    <div class="login-footer" style="text-align: center; margin-top: 20px;">
      <p style="color: #666;">
        Não tem uma conta? 
        <%= link_to "Cadastre-se aqui", new_user_path, style: "color: #007bff; text-decoration: none; font-weight: 500;" %>
      </p>
    </div>
  </div>
</div>
