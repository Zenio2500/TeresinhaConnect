<div class="mb-4">
  <h1>Escalas Litúrgicas</h1>
  <p style="color: var(--gray-600);">Gerencie as escalas de leitores para as celebrações</p>
</div>

<!-- Estatística de Escalas -->
<div class="grid grid-1 mb-4">
  <div class="stat-card stat-warning">
    <div class="stat-card-value"><%= @grades.count %></div>
    <div class="stat-card-label">Escalas Criadas</div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Todas as Escalas (<%= @grades.count %>)</h3>
    <%= link_to "➕ Nova Escala", new_grade_path, class: "btn btn-primary" %>
  </div>
  
  <div class="card-body p-0">
    <% if @grades.any? %>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Data</th>
              <th>Cor Litúrgica</th>
              <th>Tempo Litúrgico</th>
              <th>Solenidade</th>
              <th>Descrição</th>
              <th class="text-center">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @grades.order(date: :desc).each do |grade| %>
              <tr>
                <td><strong><%= grade.date.strftime("%d/%m/%Y") %></strong></td>
                <td>
                  <% if grade.liturgical_color.present? %>
                    <span class="liturgical-color liturgical-<%= grade.liturgical_color.downcase %>">
                      <span class="liturgical-color-indicator"></span>
                      <%= grade.liturgical_color.capitalize %>
                    </span>
                  <% else %>
                    <span class="badge badge-secondary">N/A</span>
                  <% end %>
                </td>
                <td><%= grade.liturgical_time || 'N/A' %></td>
                <td>
                  <% if grade.is_solemnity %>
                    <span class="badge badge-warning">Sim</span>
                  <% else %>
                    <span class="badge badge-secondary">Não</span>
                  <% end %>
                </td>
                <td>
                  <% if grade.description.present? %>
                    <%= truncate(grade.description, length: 50) %>
                  <% else %>
                    -
                  <% end %>
                </td>
                <td class="text-center">
                  <div class="btn-group">
                    <%= link_to "Ver", grade_path(grade), class: "btn btn-sm btn-secondary" %>
                    <%= link_to "Editar", edit_grade_path(grade), class: "btn btn-sm btn-warning" %>
                    <%= button_to "Excluir", grade_path(grade), method: :delete, 
                        data: { confirm: "Tem certeza que deseja excluir esta escala?" }, 
                        class: "btn btn-sm btn-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p style="color: var(--gray-600); text-align: center; padding: var(--spacing-xl);">
        Nenhuma escala cadastrada ainda.
      </p>
    <% end %>
  </div>
</div>
