<%= form_with(model: grade, local: true) do |f| %>
  <%# Exibir erros de valida√ß√£o %>
  <% if grade.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(grade.errors.count, "erro") %> <%= grade.errors.count == 1 ? "impediu" : "impediram" %> que esta escala fosse salva:</h4>
      <ul style="margin-top: var(--spacing-sm); margin-left: var(--spacing-lg);">
        <% grade.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date, "Data da Celebra√ß√£o", class: "form-label required" %>
    <%= f.hidden_field :date, id: "grade_date_hidden" %>
    <%= text_field_tag :date_display, 
        grade.date ? grade.date.strftime("%d/%m/%Y") : "", 
        class: "form-control #{grade.errors[:date].any? ? 'is-invalid' : ''}", 
        placeholder: "DD/MM/AAAA",
        required: true,
        id: "grade_date_display" %>
    <% if grade.errors[:date].any? %>
      <div class="invalid-feedback">
        <%= grade.errors[:date].first %>
      </div>
    <% end %>
    <span class="form-text">Digite a data no formato DD/MM/AAAA ou clique no √≠cone do calend√°rio</span>
  </div>

  <script>
    function initializeDatePicker() {
      const displayInput = document.getElementById('grade_date_display');
      const hiddenInput = document.getElementById('grade_date_hidden');
      
      if (!displayInput || !hiddenInput) return;

      // Criar input date invis√≠vel para o calend√°rio
      const dateInput = document.createElement('input');
      dateInput.type = 'date';
      dateInput.style.position = 'absolute';
      dateInput.style.opacity = '0';
      dateInput.style.pointerEvents = 'none';
      dateInput.style.width = '0';
      dateInput.style.height = '0';
      displayInput.parentNode.insertBefore(dateInput, displayInput.nextSibling);

      // Adicionar √≠cone de calend√°rio ao campo
      displayInput.style.paddingRight = '35px';
      const calendarIcon = document.createElement('span');
      calendarIcon.innerHTML = 'üìÖ';
      calendarIcon.style.position = 'absolute';
      calendarIcon.style.right = '10px';
      calendarIcon.style.top = '50%';
      calendarIcon.style.transform = 'translateY(-50%)';
      calendarIcon.style.cursor = 'pointer';
      calendarIcon.style.fontSize = '1.2em';
      displayInput.parentNode.style.position = 'relative';
      displayInput.parentNode.appendChild(calendarIcon);

      // Ao clicar no √≠cone, abrir o calend√°rio
      calendarIcon.addEventListener('click', function() {
        dateInput.showPicker();
      });

      // Quando selecionar data no calend√°rio
      dateInput.addEventListener('change', function() {
        if (this.value) {
          const [year, month, day] = this.value.split('-');
          const formattedDate = `${day}/${month}/${year}`;
          displayInput.value = formattedDate;
          hiddenInput.value = this.value;
        }
      });

      // M√°scara para digita√ß√£o manual
      displayInput.addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        if (value.length >= 2) {
          value = value.substring(0, 2) + '/' + value.substring(2);
        }
        if (value.length >= 5) {
          value = value.substring(0, 5) + '/' + value.substring(5, 9);
        }
        e.target.value = value;

        // Converter para formato YYYY-MM-DD se completo
        if (value.length === 10) {
          const [day, month, year] = value.split('/');
          if (day && month && year && year.length === 4) {
            hiddenInput.value = `${year}-${month}-${day}`;
            dateInput.value = `${year}-${month}-${day}`;
          }
        }
      });

      // Inicializar valor se j√° existe
      if (hiddenInput.value) {
        dateInput.value = hiddenInput.value;
      } else if (displayInput.value && displayInput.value.length === 10) {
        const [day, month, year] = displayInput.value.split('/');
        if (day && month && year) {
          hiddenInput.value = `${year}-${month}-${day}`;
          dateInput.value = `${year}-${month}-${day}`;
        }
      }
    }

    // Executar quando a p√°gina carregar
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializeDatePicker);
    } else {
      initializeDatePicker();
    }

    // Executar quando Turbo carregar a p√°gina
    document.addEventListener('turbo:load', initializeDatePicker);
  </script>

  <div class="form-group">
    <%= f.label :liturgical_color, "Cor Lit√∫rgica", class: "form-label" %>
    <div style="margin-top: var(--spacing-sm); display: flex; gap: var(--spacing-md); flex-wrap: wrap;" id="liturgical-color-options">
      <% [
        ['Verde', 'green'], 
        ['Branco', 'white'], 
        ['Roxo', 'purple'], 
        ['Vermelho', 'red'], 
        ['Rosa', 'pink']
      ].each do |name, color| %>
        <label style="cursor: pointer;" class="liturgical-color-label">
          <%= f.radio_button :liturgical_color, name, 
              id: "grade_liturgical_color_#{color}",
              class: "liturgical-color-radio",
              style: "display: none;" %>
          <span class="liturgical-color liturgical-<%= color %> liturgical-color-option" 
                data-color="<%= color %>"
                style="cursor: pointer; padding: var(--spacing-md); <%= grade.liturgical_color == name ? 'border: 3px solid var(--primary);' : '' %>">
            <span class="liturgical-color-indicator"></span>
            <%= name %>
          </span>
        </label>
      <% end %>
    </div>
    <span class="form-text">Selecione a cor lit√∫rgica conforme o calend√°rio cat√≥lico</span>
  </div>

  <script>
    function initializeLiturgicalColorSelection() {
      // Adicionar event listeners para as op√ß√µes de cor lit√∫rgica
      document.querySelectorAll('.liturgical-color-option').forEach(function(option) {
        option.addEventListener('click', function() {
          const color = this.dataset.color;
          const radioButton = document.getElementById('grade_liturgical_color_' + color);
          
          if (radioButton) {
            radioButton.checked = true;
            
            // Remover borda de todas as op√ß√µes
            document.querySelectorAll('.liturgical-color-option').forEach(function(opt) {
              opt.style.border = '';
            });
            
            // Adicionar borda na op√ß√£o selecionada
            this.style.border = '3px solid var(--primary)';
          }
        });
      });
    }

    // Executar quando a p√°gina carregar (primeira vez)
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializeLiturgicalColorSelection);
    } else {
      initializeLiturgicalColorSelection();
    }

    // Executar quando Turbo carregar a p√°gina (navega√ß√£o subsequente)
    document.addEventListener('turbo:load', initializeLiturgicalColorSelection);
  </script>

  <div class="form-group">
    <%= f.label :liturgical_time, "Tempo Lit√∫rgico", class: "form-label" %>
    <%= f.select :liturgical_time, 
        [
          ['Advento', 'Advento'],
          ['Natal', 'Natal'],
          ['Quaresma', 'Quaresma'],
          ['P√°scoa', 'P√°scoa'],
          ['Tempo Comum', 'Tempo Comum']
        ],
        { prompt: "Selecione o tempo lit√∫rgico" }, 
        { class: "form-control" } %>
    <span class="form-text">Opcional - Tempo do ano lit√∫rgico</span>
  </div>

  <div class="form-group">
    <div class="form-check">
      <%= f.check_box :is_solemnity, class: "form-check-input" %>
      <%= f.label :is_solemnity, "Esta celebra√ß√£o √© uma solenidade", class: "form-check-label" %>
    </div>
    <span class="form-text">Marque se for uma solenidade especial (Natal, P√°scoa, etc.)</span>
  </div>

  <div class="form-group">
    <%= f.label :description, "Descri√ß√£o", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", 
        placeholder: "Ex: Missa de Natal, Domingo de Ramos, etc.", rows: 3 %>
    <span class="form-text">Opcional - Informa√ß√µes adicionais sobre a celebra√ß√£o</span>
  </div>

  <div class="form-actions">
    <%= f.submit grade.persisted? ? "Atualizar Escala" : "Criar Escala", 
        class: "btn btn-primary",
        data: { confirm: grade.persisted? ? "Tem certeza que deseja atualizar esta escala?" : nil } %>
    <%= link_to "Cancelar", grade.persisted? ? grade_path(grade) : grades_path, class: "btn btn-secondary" %>
  </div>
<% end %>
