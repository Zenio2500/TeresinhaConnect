<div class="mb-4">
  <h1><%= @pastoral.name %></h1>
  <p style="color: var(--gray-600);">Detalhes da pastoral</p>
</div>

<% if @pastoral.name.downcase == "liturgia" %>
  <!-- Estat√≠sticas da Pastoral Liturgia -->
  <div class="grid grid-2 mb-4">
    <%= link_to readers_path, style: "text-decoration: none; color: inherit;" do %>
      <div class="stat-card stat-info" style="cursor: pointer; transition: transform 0.2s;" onmouseover="this.style.transform='scale(1.02)'" onmouseout="this.style.transform='scale(1)'">
        <div class="stat-card-value"><%= @readers_count %></div>
        <div class="stat-card-label">Leitores Cadastrados</div>
      </div>
    <% end %>

    <%= link_to grades_path, style: "text-decoration: none; color: inherit;" do %>
      <div class="stat-card stat-warning" style="cursor: pointer; transition: transform 0.2s;" onmouseover="this.style.transform='scale(1.02)'" onmouseout="this.style.transform='scale(1)'">
        <div class="stat-card-value"><%= @grades_count %></div>
        <div class="stat-card-label">Escalas Lit√∫rgicas</div>
      </div>
    <% end %>
  </div>

  <% if @upcoming_grades.any? %>
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Pr√≥ximas Escalas Lit√∫rgicas</h3>
        <%= link_to "Ver Todas", grades_path, class: "btn btn-sm btn-secondary" %>
      </div>
      
      <div class="card-body p-0">
        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>Data</th>
                <th>Descri√ß√£o</th>
                <th>Cor Lit√∫rgica</th>
                <th class="text-center">A√ß√µes</th>
              </tr>
            </thead>
            <tbody>
              <% @upcoming_grades.each do |grade| %>
                <tr>
                  <td><strong><%= grade.date.strftime("%d/%m/%Y") %></strong></td>
                  <td><%= grade.description.present? ? grade.description : "Sem descri√ß√£o" %></td>
                  <td>
                    <% if grade.liturgical_color.present? %>
                      <span class="liturgical-color liturgical-<%= grade.liturgical_color.downcase %>">
                        <span class="liturgical-color-indicator"></span>
                        <%= grade.liturgical_color %>
                      </span>
                    <% else %>
                      N/A
                    <% end %>
                  </td>
                  <td class="text-center">
                    <%= link_to "Ver", grade_path(grade), class: "btn btn-sm btn-secondary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Informa√ß√µes da Pastoral</h3>
    <div class="btn-group">
      <% current_user = User.find_by(id: session[:user_id]) %>
      <% if can_edit_pastoral?(current_user, @pastoral) %>
        <%= link_to "Editar", edit_pastoral_path(@pastoral), class: "btn btn-sm btn-warning" %>
      <% end %>
      <% if can_delete_pastoral?(current_user) && @pastoral.name.downcase != 'geral' %>
        <button type="button" class="btn btn-sm btn-danger" onclick="showDeletePastoralModal()">Excluir</button>
      <% end %>
      <%= link_to "Voltar", pastorals_path, class: "btn btn-sm btn-secondary" %>
    </div>
  </div>
  
  <div class="card-body">
    <ul class="detail-list">
      <li class="detail-list-item">
        <span class="detail-list-label">Nome:</span>
        <span class="detail-list-value"><strong><%= @pastoral.name %></strong></span>
      </li>
      
      <li class="detail-list-item">
        <span class="detail-list-label">Coordenador:</span>
        <span class="detail-list-value">
          <% if @pastoral.coordinator %>
            <%= link_to @pastoral.coordinator.name, user_path(@pastoral.coordinator), class: "btn btn-sm btn-secondary" %>
          <% else %>
            N/A
          <% end %>
        </span>
      </li>
      
      <li class="detail-list-item">
        <span class="detail-list-label">Vice-Coordenador:</span>
        <span class="detail-list-value">
          <% if @pastoral.vice_coordinator %>
            <%= link_to @pastoral.vice_coordinator.name, user_path(@pastoral.vice_coordinator), class: "btn btn-sm btn-secondary" %>
          <% else %>
            N/A
          <% end %>
        </span>
      </li>
      
      <% if @pastoral.description.present? %>
        <li class="detail-list-item">
          <span class="detail-list-label">Descri√ß√£o:</span>
          <span class="detail-list-value"><%= @pastoral.description %></span>
        </li>
      <% end %>
      
      <li class="detail-list-item">
        <span class="detail-list-label">Total de Membros:</span>
        <span class="detail-list-value">
          <span class="badge badge-primary"><%= @pastoral.users.count %></span>
        </span>
      </li>
    </ul>
  </div>
</div>

<% if @pastoral.users.any? %>
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">Membros da Pastoral</h3>
    </div>
    
    <div class="card-body">
      <div class="grid grid-3">
        <% @pastoral.users.each do |user| %>
          <div class="card">
            <div class="card-body">
              <h5><%= user.name %></h5>
              <p style="color: var(--gray-600); font-size: 0.9rem;"><%= user.email %></p>
              <%= link_to "Ver Perfil", user_path(user), class: "btn btn-sm btn-secondary mt-2" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<% current_user = User.find_by(id: session[:user_id]) %>
<% if can_delete_pastoral?(current_user) && @pastoral.name.downcase != 'geral' %>
  <!-- Modal de Confirma√ß√£o de Exclus√£o -->
  <div id="delete-pastoral-modal" class="modal-overlay" style="display: none;">
    <div class="confirmation-modal">
      <div class="modal-header">
        <span class="modal-icon danger">üóëÔ∏è</span>
        <h3 class="modal-title">Confirmar Exclus√£o de Pastoral</h3>
      </div>
      <div class="modal-body">
        <p>Tem certeza que deseja excluir a pastoral <strong><%= @pastoral.name %></strong>?</p>
        <p>Esta a√ß√£o n√£o pode ser desfeita.</p>
      </div>
      <div class="modal-actions">
        <button class="btn btn-secondary" onclick="closeDeletePastoralModal()">Cancelar</button>
        <%= button_to "Confirmar Exclus√£o", pastoral_path(@pastoral), 
            method: :delete, 
            class: "btn btn-danger" %>
      </div>
    </div>
  </div>

  <script>
    function showDeletePastoralModal() {
      document.getElementById('delete-pastoral-modal').style.display = 'flex';
    }
    
    function closeDeletePastoralModal() {
      document.getElementById('delete-pastoral-modal').style.display = 'none';
    }
    
    document.getElementById('delete-pastoral-modal').addEventListener('click', function(e) {
      if (e.target === this) {
        closeDeletePastoralModal();
      }
    });
    
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeDeletePastoralModal();
      }
    });
  </script>
<% end %>
