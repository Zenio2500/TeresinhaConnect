<div class="mb-4">
  <h1>Pastorais</h1>
  <p style="color: var(--gray-600);">Gerencie as pastorais da par√≥quia</p>
</div>

<div class="card">
  <div class="card-header">
    <h3 class="card-title">Todas as Pastorais (<%= @pastorals.count %>)</h3>
    <% current_user = User.find_by(id: session[:user_id]) %>
    <% if can_manage_pastorals?(current_user) %>
      <%= link_to "‚ûï Nova Pastoral", new_pastoral_path, class: "btn btn-primary" %>
    <% end %>
  </div>
  
  <div class="card-body p-0">
    <% if @pastorals.any? %>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Coordenador</th>
              <th>Vice-Coordenador</th>
              <th>Membros</th>
              <th class="text-center">A√ß√µes</th>
            </tr>
          </thead>
          <tbody>
            <% @pastorals.each do |pastoral| %>
              <tr>
                <td><strong><%= pastoral.name %></strong></td>
                <td><%= pastoral.coordinator&.name || 'N/A' %></td>
                <td><%= pastoral.vice_coordinator&.name || 'N/A' %></td>
                <td><%= pastoral.users.count %></td>
                <td class="text-center">
                  <div class="btn-group">
                    <%= link_to "Ver", pastoral_path(pastoral), class: "btn btn-sm btn-secondary" %>
                    <% current_user = User.find_by(id: session[:user_id]) %>
                    <% if can_edit_pastoral?(current_user, pastoral) %>
                      <%= link_to "Editar", edit_pastoral_path(pastoral), class: "btn btn-sm btn-warning" %>
                    <% end %>
                    <% if can_delete_pastoral?(current_user) && pastoral.name.downcase != 'geral' %>
                      <button type="button" class="btn btn-sm btn-danger" onclick="showDeleteModal<%= pastoral.id %>()">Excluir</button>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p style="color: var(--gray-600); text-align: center; padding: var(--spacing-xl);">
        Nenhuma pastoral cadastrada ainda.
      </p>
    <% end %>
  </div>
</div>

<!-- Modais de Confirma√ß√£o de Exclus√£o -->
<% current_user = User.find_by(id: session[:user_id]) %>
<% @pastorals.each do |pastoral| %>
  <% if can_delete_pastoral?(current_user) && pastoral.name.downcase != 'geral' %>
    <div id="delete-modal-<%= pastoral.id %>" class="modal-overlay" style="display: none;">
      <div class="confirmation-modal">
        <div class="modal-header">
          <span class="modal-icon danger">üóëÔ∏è</span>
          <h3 class="modal-title">Confirmar Exclus√£o de Pastoral</h3>
        </div>
        <div class="modal-body">
          <p>Tem certeza que deseja excluir a pastoral <strong><%= pastoral.name %></strong>?</p>
          <p>Esta a√ß√£o n√£o pode ser desfeita.</p>
        </div>
        <div class="modal-actions">
          <button class="btn btn-secondary" onclick="closeDeleteModal<%= pastoral.id %>()">Cancelar</button>
          <%= button_to "Confirmar Exclus√£o", pastoral_path(pastoral), 
              method: :delete, 
              class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<script>
  <% @pastorals.each do |pastoral| %>
    <% if can_delete_pastoral?(current_user) && pastoral.name.downcase != 'geral' %>
      function showDeleteModal<%= pastoral.id %>() {
        document.getElementById('delete-modal-<%= pastoral.id %>').style.display = 'flex';
      }
      
      function closeDeleteModal<%= pastoral.id %>() {
        document.getElementById('delete-modal-<%= pastoral.id %>').style.display = 'none';
      }
      
      document.getElementById('delete-modal-<%= pastoral.id %>').addEventListener('click', function(e) {
        if (e.target === this) {
          closeDeleteModal<%= pastoral.id %>();
        }
      });
    <% end %>
  <% end %>
  
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      document.querySelectorAll('.modal-overlay').forEach(modal => {
        modal.style.display = 'none';
      });
    }
  });
</script>
