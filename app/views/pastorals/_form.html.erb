<%= form_with(model: pastoral, local: true) do |f| %>
  <%# Exibir erros de validação %>
  <% if pastoral.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(pastoral.errors.count, "erro") %> <%= pastoral.errors.count == 1 ? "impediu" : "impediram" %> que esta pastoral fosse salva:</h4>
      <ul style="margin-top: var(--spacing-sm); margin-left: var(--spacing-lg);">
        <% pastoral.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Nome da Pastoral", class: "form-label required" %>
    <%= f.text_field :name, class: "form-control #{pastoral.errors[:name].any? ? 'is-invalid' : ''}", 
        placeholder: "Ex: Pastoral da Juventude", autofocus: true, required: true %>
    <% if pastoral.errors[:name].any? %>
      <div class="invalid-feedback">
        <%= pastoral.errors[:name].first %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :coordinator_id, "Coordenador", class: "form-label required" %>
    <%= f.collection_select :coordinator_id, 
        User.where(is_coordinator: true).order(:name), 
        :id, :name, 
        { prompt: "Selecione um coordenador" }, 
        { class: "form-control #{pastoral.errors[:coordinator_id].any? ? 'is-invalid' : ''}", required: true } %>
    <span class="form-text">Apenas usuários marcados como coordenadores aparecem nesta lista</span>
    <% if pastoral.errors[:coordinator_id].any? %>
      <div class="invalid-feedback">
        <%= pastoral.errors[:coordinator_id].first %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :vice_coordinator_id, "Vice-Coordenador", class: "form-label required" %>
    <%= f.collection_select :vice_coordinator_id, 
        User.where(is_coordinator: true).order(:name), 
        :id, :name, 
        { prompt: "Selecione um vice-coordenador" }, 
        { class: "form-control #{pastoral.errors[:vice_coordinator_id].any? ? 'is-invalid' : ''}", required: true } %>
    <span class="form-text">Deve ser diferente do coordenador</span>
    <% if pastoral.errors[:vice_coordinator_id].any? %>
      <div class="invalid-feedback">
        <%= pastoral.errors[:vice_coordinator_id].first %>
      </div>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Descrição", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", 
        placeholder: "Descreva os objetivos e atividades da pastoral...", rows: 4 %>
    <span class="form-text">Opcional - Informações adicionais sobre a pastoral</span>
  </div>

  <div class="form-actions">
    <%= f.submit pastoral.persisted? ? "Atualizar Pastoral" : "Criar Pastoral", class: "btn btn-primary" %>
    <%= link_to "Cancelar", pastoral.persisted? ? pastoral_path(pastoral) : pastorals_path, class: "btn btn-secondary" %>
  </div>
<% end %>
